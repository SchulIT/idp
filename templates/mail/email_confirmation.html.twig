{% apply inky_to_html|inline_css(css_source('email')) %}
    <spacer size="16"></spacer>

    <container>

        <row class="header">
            <columns>

                <spacer size="16"></spacer>

                <h4 class="text-center">{{ config.name }}</h4>
            </columns>
        </row>
        <row>
            <columns>
                <spacer size="16"></spacer>

                <h1 class="text-center">{{ 'email.title'|trans({}, 'mail') }}</h1>

                <spacer size="16"></spacer>

                <p class="text-center">
                    {{ 'email.message'|trans({'%username%': username }, 'mail') }}
                </p>
                <button class="large expanded" href="{{ link }}">
                    {{ 'email.button'|trans({}, 'mail') }}
                </button>
            </columns>
        </row>
    </container>
{% endapply %}