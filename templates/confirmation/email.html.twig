{% extends "auth/main.html.twig" %}

{% block title %}{{ 'email_confirmation.label'|trans }}{% endblock %}

{% block content %}
    {% if error is not empty %}
        <div class="text-center">
            <i class="fas fa-times fa-3x d-block text-danger"></i>
            <h4>{{ 'email_confirmation.error.label'|trans }}</h4>

            <p>{{ error|trans }}</p>
        </div>
    {% else %}
        <div class="text-center">
            <i class="fas fa-check fa-3x d-block text-success"></i>
            <h4>{{ 'email_confirmation.success.label'|trans }}</h4>

            <p>{{ 'email_confirmation.success.message'|trans }}</p>
        </div>
    {% endif %}

    <hr>
    {% include 'auth/errors.html.twig' %}

    <div class="container-fluid px-0">
        <div class="row">
            <div class="col-md-12">
                <a href="{{ path('dashboard') }}" class="btn btn-primary w-100" role="button">{{ 'email_confirmation.dashboard'|trans }}</a>
            </div>
        </div>
    </div>

{% endblock %}